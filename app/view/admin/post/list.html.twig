{% extends 'admin/layout/index.html.twig' %}
{% block content %}
<div class="page-header">
	<h1>
		
	</h1>
</div><!-- /.page-header -->
<div class="row_cate">
	<div class="col-xs-12">
		<div class="table-header">
			DANH SÁCH
			
			<a style="float:right;color:#fff;margin-right:10px;" href="{{url('Add_Products', { idcate: idcate})}}"<span>Thêm mới</span></a>
		</div>
		<div>
			{% if notification is defined %}
			<div class="alert alert-danger">
				<strong>{{notification}}</strong> 
			</div>
			{% endif %}
			<table id="sample-table-2" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>Ten sp</th>
						<th>Anh</th>
						<th>Gia</th>
						<th>So luong</th>
						<th>Ngay nhap kho</th>
						<th>Control</th>
					</tr>
				</thead>
				{% for c in Products %}
				<tbody>
					<td>{{c.name}}</td>
					<td>{{c.images}}</td>
					<td>{{c.price}}</td>
					<td>{{c.num}}</td>
					<td>{{c.date}}</td>
					<td><div class="hidden-sm hidden-xs action-buttons">
						<a class="red" onclick="javascript:Del('{{ url('delete_Products', { 'id': c.id,'idcate':c.cate}) }}')" href="javascript:void(0)" class="tooltip-success" data-rel="tooltip" title="Delete">
							<i class="glyphicon glyphicon-trash bigger-130"></i>
						</a>
						<a class="green" href="{{ url('update_Products', { 'id': c.id,'idcate':c.cate}) }}">
							<i class="ace-icon fa fa-pencil bigger-130"></i>
						</a>
					</div></td>
				</tbody>
				{% endfor %}
			</table>

		</div>
	</div><!-- /.col -->
</div><!-- /.row -->


{% endblock %}
