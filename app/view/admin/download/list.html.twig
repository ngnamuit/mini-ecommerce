{% extends 'admin/layout/index.html.twig' %}
{% block content %}
<div class="page-header">
	<h1>
		{{control}}
	</h1>
</div><!-- /.page-header -->
<div class="row_cate">

	<div class="col-xs-12">
		<div class="table-header">
			DANH SÁCH
			<a style="float:right;color:#fff;margin-right:10px;" href="{{ url('add_down') }}"><span>Thêm mới</span></a>
		</div>
		<div>
			<!-- {if isset($notification)} -->
			<div class="alert alert-block alert-{$notification.type}">
				<button type="button" class="close" data-dismiss="alert"><i class="ace-icon fa fa-times"></i></button>
				<!-- {$notification.msg} -->
			</div>
			<table id="sample-table-2" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th class="center">
							<label class="position-relative">
								<input type="checkbox" id="select_all" class="ace" />
								<span class="lbl"></span>
							</label>
						</th>
						<th>Name</th>
						<th>Images</th>
						<th>Sort</th>
						<th>Control</th>
					</tr>
				</thead>
				{% for a in adv %}
				<tbody>
					<td class="center">
						<input type="checkbox" id="select" class="ace" />
						<span class="lbl"></span>
					</td>
					<td>{{a.name_vi}}</td>
					<td><img src="{{a.images}}" width="160px"/> </td>
					<td>{{a.sort}}</td>
					<td><div class="hidden-sm hidden-xs action-buttons">
						<a class="green" href="{{ url('up_down', { id: a.id}) }}">
							<i class="ace-icon fa fa-pencil bigger-130"></i>
						</a>
						<a onclick="javascript:Del('{{ url('del_down', { id: a.id}) }}')" href="javascript:void(0)" class="red" data-rel="tooltip" title="Delete">
						<i class="glyphicon glyphicon-trash bigger-100"></i>
					</a>
					</div></td>
				</tbody>
				{% endfor %}
			</table>

		</div>
	</div><!-- /.col -->
</div><!-- /.row -->
{% endblock %}
