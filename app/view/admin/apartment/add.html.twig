{% extends 'admin/layout/index.html.twig' %}
{% block content %}
<div class="page-header">
	<h1>
		{{control}}
	</h1>
</div><!-- /.page-header -->
<div class="row_cate">

	<div class="col-xs-12">

		<form class="form-horizontal" name="frmAddPost" id="frmAddPost" role="form" action="" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<div class="notification">
					{% if notification is defined %}
					{{notification}}
					{% endif %}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Name Vi: *</label>
					<div class="col-sm-9">
						<input type="text" name="name_vi" id="txtName" value="" class="col-xs-10 col-sm-6" required />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Name En: *</label>
					<div class="col-sm-9">
						<input type="text" name="name_en" id="txtName" value="" class="col-xs-10 col-sm-6" required />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Name Ja: *</label>
					<div class="col-sm-9">
						<input type="text" name="name_ja" id="txtName" value="" class="col-xs-10 col-sm-6" required />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Name Cn: *</label>
					<div class="col-sm-9">
						<input type="text" name="name_cn" id="txtName" value="" class="col-xs-10 col-sm-6" required />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Content Vi: </label>
					<div class="col-sm-9">
						<textarea type="text" name="content_vi" class="ckeditor" class="col-xs-10 col-sm-6"> </textarea>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Content En: </label>
					<div class="col-sm-9">
						<textarea type="text" name="content_en" class="ckeditor" class="col-xs-10 col-sm-6"> </textarea>					
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Content Ja: </label>
					<div class="col-sm-9">
						<textarea type="text" name="content_ja" class="ckeditor" class="col-xs-10 col-sm-6"> </textarea>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Content Cn: </label>
					<div class="col-sm-9">
						<textarea type="text" name="content_cn" class="ckeditor" class="col-xs-10 col-sm-6"> </textarea>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Sort</label>
					<div class="col-sm-9">
					<input type="number" name="sort" id="sort" value="" class="col-xs-10 col-sm-1" required>
					</div>
				</div>
				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<input type="hidden" name="token" value="{Security::setToken('token_form')}" />
						<input type="hidden" name="add" value="add" />
						<button class="btn btn-info" type="submit" onclick="return btnAdd_onclick();">
							<i class="ace-icon fa fa-check bigger-110"></i>
							Submit
						</button>
						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="ace-icon fa fa-undo bigger-110"></i>
							Reset
						</button>
					</div>
				</div>

			</form>
		</div><!-- /.col -->
	</div><!-- /.row -->

	<script type="text/javascript">
	function btnAdd_onclick(){
		if(test_empty($('#txtName').val()))
		{
			alert('Vui lòng nhập Tiêu đề');document.frmAddPost.txtName.focus();return false;
		}
		if(test_empty($('#linkimages').val())){
			alert('Vui lòng chọn hình');document.frmAddPost.txtImages.focus();return false;
		}
		return true;
	}
	</script>
<script type="text/javascript">
var editor = CKEDITOR.replace( 'content', {
    filebrowserBrowseUrl : 'ckfinder/ckfinder.html',
    filebrowserImageBrowseUrl : 'ckfinder/ckfinder.html?type=Images',
    filebrowserFlashBrowseUrl : 'ckfinder/ckfinder.html?type=Flash',
    filebrowserUploadUrl : 'ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
    filebrowserImageUploadUrl : 'ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images',
    filebrowserFlashUploadUrl : 'ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Flash'
});
CKFinder.setupCKEditor( editor, '../' );
</script>
	{% endblock %}
