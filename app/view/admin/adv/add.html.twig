{% extends 'admin/layout/index.html.twig' %}
{% block content %}
<div class="page-header">
	<h1>
		{{control}}
	</h1>
</div>
<div class="row_cate">

	<div class="col-xs-12">
		<form class="form-horizontal" name="frmCategory" role="form" action="" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<div class="notification">
					{% if notification is defined %}
					{{notification}}
					{% endif %}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Name: </label>
					<div class="col-sm-9">
						<input  name="name" value="" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Image: *</label>
					<div class="col-sm-9">
						<strong>Kích thước:</strong> Rộng 420px  - Cao 250px<br />
						<input id="linkimages" name="images" value="" class="col-xs-10 col-sm-5" type="text">
						<span class="input-group-btn">
							<button class="btn btn-sm btn-default" type="button" id="btnimages" onclick="BrowseServerList('linkimages');">
								<i class="ace-icon glyphicon glyphicon-upload bigger-110"></i>
								Browser
							</button>
						</span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Link: </label>
					<div class="col-sm-9">
						<input  name="link" value="" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Sort</label>
					<div class="col-sm-9">
					<input type="number" name="sort" id="sort" value="" class="col-xs-10 col-sm-1" required>
					</div>
				</div>
				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<input type="hidden" name="add" value="add" />
						<button class="btn btn-info" type="submit" onclick="return btnAdd_onclick();">
							<i class="ace-icon fa fa-check bigger-110"></i>
							Submit
						</button>
						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="ace-icon fa fa-undo bigger-110"></i>
							Reset
						</button>
					</div>
				</div>

			</form>
		</div><!-- /.col -->
	</div><!-- /.row -->
	<script type="text/javascript">
	function btnAdd_onclick(){
		if(test_empty($('#name').val())){
			alert('Nhập Tiêu đề');document.frmCategory.name.focus();return false;
		}
		if(test_empty($('#sort').val())){
			alert('Nhập Vị Trí');document.frmCategory.sort.focus();return false;
		}
		return true;
	}
	</script>

	{% endblock %}
