{% extends 'admin/layout/index.html.twig' %}
{% block content %}
<div class="page-header">
	<h1>
		
	</h1>
</div>
<div class="row_cate">

	<div class="col-xs-12">
		<form class="form-horizontal" name="frmCategory" role="form" action="" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<div class="notification">
					{% if notification is defined %}
						{{notification}}
					{% endif %}
				</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label no-padding-right">Tên loai san pham: *</label>
					<div class="col-sm-9">
						<input type="text" name="name" id="name" value="{%if action =='update'%}{{category.name}}{%endif%}" class="col-xs-10 col-sm-6" required/>
					</div>
				</div>
				</div>
				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<input type="hidden" name="add" value="add" />
						<button class="btn btn-info" type="submit" onclick="return btnAdd_onclick();">
							<i class="ace-icon fa fa-check bigger-110"></i>
							Submit
						</button>
						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="ace-icon fa fa-undo bigger-110"></i>
							Reset
						</button>
					</div>
				</div>

			</form>
		</div><!-- /.col -->
	</div><!-- /.row -->
	<script type="text/javascript">
	function btnAdd_onclick(){
		if(test_empty($('#name').val())){
			alert('Nhập Tiêu đề');document.frmCategory.name.focus();return false;
		}
		if(test_empty($('#sort').val())){
			alert('Nhập Vị Trí');document.frmCategory.sort.focus();return false;
		}
		return true;
	}
	</script>

	{% endblock %}
