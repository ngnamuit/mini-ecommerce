{% extends 'admin/layout/index.html.twig' %}
{% block content %}

<div class="page-header">
	<h1>
	</h1>
</div><!-- /.page-header -->
<div class="row_cate">
	<div class="col-xs-12">
		<div class="table-header">
			DANH SÁCH QUICK LINKS
			<a style="float:right;color:#fff;margin-right:10px;" href="{{ url('Add_quicklink') }}"><span>Thêm quick links</span></a>
		</div>
		<table id="sample-table-2" class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th class="center">
							<label class="position-relative">
								<input type="checkbox" id="select_all" class="ace" />
								<span class="lbl"></span>
							</label>
					</th>					
					<th>Tên quick links</th>
					<th>Link</th>
					<th>Trạng Thái</th>
					<th>Thứ tự hiển thị</th>
					<th>Control</th>
				</tr>				
			</thead>
			{%for link in links%}
			<tbody>
				<td class="center">
						<input type="checkbox" id="select" class="ace" />
						<span class="lbl"></span>
				</td>
				<td>{{link.name_vi}}</td>
				<td>{{link.link}}</td>
				<td>
					{%if link.status == 1 %}
						Hiển thị
					{%else%}
						Không hiển thị
					{%endif%}
				</td>
				<td>{{link.sort}}</td>
				<td>
					<div class="hidden-sm hidden-xs action-buttons">
						<a class="red" onclick="javascript:Del('{{ url('Delete_quicklink', { id: link.id}) }}')" href="javascript:void(0)" class="tooltip-success" data-rel="tooltip" title="Delete">
							<i class="glyphicon glyphicon-trash bigger-130"></i>
						</a>
						<a class="green" href="{{ url('Update_quicklink', { id: link.id}) }}">
							<i class="ace-icon fa fa-pencil bigger-130"></i>
						</a>
					</div>
				</td>
			</tbody>
			{%endfor%}			
			</table>

		</div>
	</div><!-- /.col -->
</div><!-- /.row -->
{% endblock %}