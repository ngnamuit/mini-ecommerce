{%extends 'default/layout/block.html.twig' %}
{%block slider%}{%endblock%}
{%block content%}
<section id="form"><!--form-->
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
          <div class="login-form"><!--login form-->
            <h2>Login to your account</h2>
            <form action="{{url('login')}}" method="post">
              <input type="name" name='name' placeholder="Name" />
              <input type="password" name='password' placeholder="Password"/>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
              <span>
                <input type="checkbox" class="checkbox"> 
                Keep me signed in
              </span>
              <h4>{%if notification_login is defined%}{{notification_login}}{%endif%}</h4>
              <button type="submit" class="btn btn-default" name='login' value="login" >Login</button>
              
            </form>
          </div><!--/login form-->
        </div>
        <div class="col-sm-1">
          <h2 class="or">OR</h2>
        </div>
        <div class="col-sm-4">
          <div class="signup-form"><!--sign up form-->
            <h2>New User Signup!</h2>
            
            <form action="{{url('register')}}" method="post">
              <input type="text" placeholder="Name" name="user" required/>
              <input type="email" placeholder="Email Address" name="email" required/>
              <input type="password" placeholder="Password" name="password" required />
              {%if notification is defined%}
              <h2 class="red"><i>{{notification}}</i></h2>
            {%endif%}
              <button type="submit" class="btn btn-default" name='register' value="register">register</button>
            </form>
          </div><!--/sign up form-->
        </div>
      </div>
    </div>
  </section><!--/form-->
{%endblock%}